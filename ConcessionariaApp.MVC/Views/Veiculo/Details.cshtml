@using ConcessionariaApp.Application.Dtos
@model VeiculoDto

@{
    ViewData["Title"] = "Detalhes do Veículo";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Detalhes do Veículo</h2>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Modelo:</strong> @Model.Modelo</li>
                <li class="list-group-item"><strong>Fabricante:</strong> @Model.Fabricante?.Nome</li>              
                <li class="list-group-item"><strong>Ano:</strong> @Model.AnoFabricacao</li>
                <li class="list-group-item"><strong>Preço:</strong> @Model.Preco.ToString("C")</li>
            </ul>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                <i class="bi bi-pencil"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </div>
</div>
